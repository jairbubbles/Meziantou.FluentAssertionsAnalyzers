{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboardApproval"
  ],
  "packageRules": [
     {
      "matchPackageNames": ["Microsoft.CodeAnalysis"],
      "groupName": "roslyn-analyzers",
      "enabled": false
    },
    {
      "matchPackagePatterns": [ ".*" ],
      "groupName": "all",
      "separateMajorMinor": false
    }
  ]    
}
